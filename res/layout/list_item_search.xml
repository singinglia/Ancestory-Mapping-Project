<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/searchBarIcon"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginLeft="8dp"
        android:layout_alignParentLeft="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/searchBarIcon"
        android:layout_toRightOf="@id/searchBarIcon"
        android:layout_marginLeft="16dp">

        <TextView
            android:id="@+id/topLineSearchItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            tools:text="BIRTH: Salt Lake City, Utah (1859)" />

        <TextView
            android:id="@+id/bottomLineSearchItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Darth Vader" />
    </LinearLayout>


</RelativeLayout>